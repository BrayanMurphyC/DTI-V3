= form_for @documento, html: { multipart: true } do |f|
  - if @documento.errors.any?
    #error_explanation
      %h2= "#{pluralize(@documento.errors.count, "error")} prohibited this documento from being saved:"
      %ul
        - @documento.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :archivo
    = f.file_field :archivo
  .field
    = f.label :titulo
    = f.text_field :titulo
  .field
    = f.label :descripcion
    = f.text_area :descripcion
  .actions
    = f.submit 'Save'
